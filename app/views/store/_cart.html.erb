
<% if @cart.count <= 0 %>
	You have nothing in your cart. Shame on you!
<% else %>
	You have <%= pluralize(@cart.count, "item") %> in your cart.

	<button id="toggle_cart_button" class="btn-info">View</button>

	<div id="cart_detail_panel">
		<% @cart.each do |key, value| %>
			<div> 
				<%= value[0] %> - <%= value[1] %> <%= number_to_currency value[2] %> 
				<%= link_to "X", store_remove_cart_item_path(:product_id => key), :method => :delete %>
			</div>
		<% end %>
		<hr>
		<div id="cart_total">
			Total: <%= number_to_currency(@sum) %>
			<%= link_to "Buy now", new_customer_path %>
		</div>
	</div>
<% end %>
