<div class="cart-panel">

	<div class="cart">
		<h4>Your Cart</h4>
		<div id="cart_msg">
			<%= render 'cart' %>
		</div>
	</div>    



	<h1>Welcome to ThunderCats!</h1>

	<div class="row">
		<% @products.each do |product| %>
		<div class="col-md-4 text-center">
			<h3><%= product.name %></h3>
			<div class="description text-center">
				<%= product.description %></div>
					<div class="details text-center">
						<%= product.brand %></br>
						SKU: <%= product.sku %></br>
						Model#: <%= product.model_num %></br>
						<div class="price">
							<%= number_to_currency product.unit_price %>
						</div>
					</div><!-- Details -->
			<div>
				Quantity: 
				<!-- Homework start -->
				<!-- <input type="hidden" class="product-id" value=" <%= product.id %>" /> -->
				<!-- Homework end -->

				<input type-"text" class="quantity" value="1" />
				<!-- <input type-"text" class="quantity" placeholder="Enter number" /> -->
				<button class="add-to-cart-button" data-product-id="<%=product.id %>"
				data-product-name="<%=product.name %>" data-unit-price="<%=product.unit_price %>">Add to Cart</button>
			</div>
		</div>
		<% end %>
	</div>

</div>